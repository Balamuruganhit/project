                                        <include-form name="FindFracas" location="component://PanguAi/widget/PanguAiForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
                                        <include-form name="ListSearchFracas" location="component://PanguAi/widget/PanguAiForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                                <container>
                                                <platform-specific>
                                            <html><html-template location="component://PanguAi/template/selector.ftl"/></html>
                                        </platform-specific>
                                            </container> 
                            </widgets>
                            
                        </section>
                            
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
